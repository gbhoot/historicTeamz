<!doctype html>
<html lang="en">

<head>
    <title>Create Game</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" 
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" 
        crossorigin="anonymous">
    <link rel="stylesheet" href="createGame.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="/scripts/creategame.js"></script>
</head>

<body>
    <header class="mb-4">
        <nav class="navbar bg-dark text-light py-3">
            <div class="col-md-2 text-center">
                <a href="/" style="text-decoration:none"
                class="text-light"><h2>Home</h2></a>
            </div>
            <div class="col text-center">
                <a href="/game/createGame" style="text-decoration:none"
                class="text-light"><h2>Create Game</h2></a>
            </div>
            <div class="col-md-2 text-center"></div>
        </nav>
    </header>

    <main>
        <form action="" id="createGameForm"></form>
        <div class="container">
            <div class="col-md-3"></div>
            <div class="col">
                <div class="accordion" id="gameAccordion">
                    <div class="card">
                        <div class="card-header" id="headTeam">
                            <div class="row">
                                <div class="col">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" 
                                        data-toggle="collapse" data-target="#collapseTeam" 
                                        aria-expanded="true" aria-controls="collapseTeam"
                                        style="text-decoration:none"
                                        >Select Team</button>
                                    </h2>
                                </div>
                                <div class="col-md-2">
                                    <button disabled class="btn btn-success" id="teamBtn"
                                    class="nextBtns"
                                    >Next</button>
                                </div>
                            </div>
                        </div>
                            
                        <div id="collapseTeam" class="collapse show" aria-labelledby="headTeam" 
                        data-parent="#gameAccordion">
                            <div class="card-body text-left">
                                <div class="row">
                                    <div class="col">
                                        <input class="form-control my-2" type="text" id="teamInp">
                                        <div class="form-group" id="teamSel">
                                            <select multiple class="form-control" id="teamSelect">
                                            </select>
                                        </div>
                                    </div>                                    
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headOppo">
                            <div class="row">
                                <div class="col">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" 
                                        data-toggle="collapse" data-target="#collapseOppo" 
                                        aria-expanded="true" aria-controls="collapseOppo"
                                        style="text-decoration:none"
                                        >Select Opposition</button>
                                    </h2>
                                </div>
                                <div class="col-md-2">
                                    <button disabled class="btn btn-success" id="oppoBtn"
                                    class="nextBtns"
                                    >Next</button>
                                </div>
                            </div>
                        </div>
                            
                        <div id="collapseOppo" class="collapse" aria-labelledby="headOppo" 
                        data-parent="#gameAccordion">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <input class="form-control my-2" type="text" id="oppoInp">
                                        <div class="form-group">
                                            <select multiple class="form-control" id="oppoSelect">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headComp">
                            <div class="row">
                                <div class="col">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" 
                                        data-toggle="collapse" data-target="#collapseComp" 
                                        aria-expanded="true" aria-controls="collapseComp"
                                        style="text-decoration:none"
                                        >Select Competition</button>
                                    </h2>
                                </div>
                                <div class="col-md-2">
                                    <button disabled class="btn btn-success" id="compBtn"
                                    class="nextBtns"
                                    >Next</button>
                                </div>
                            </div>
                        </div>
                            
                        <div id="collapseComp" class="collapse" aria-labelledby="headComp" 
                        data-parent="#gameAccordion">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <input class="form-control my-2" type="text" id="compInp">
                                        <div class="form-group">
                                            <select multiple class="form-control" id="compSelect"
                                            form="#createGameForm">
                                            </select>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headSeason">
                            <div class="row">
                                <div class="col">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" 
                                        data-toggle="collapse" data-target="#collapseSeason" 
                                        aria-expanded="true" aria-controls="collapseSeason"
                                        style="text-decoration:none"
                                        >Enter Season</button>
                                    </h2>
                                </div>
                                <div class="col-md-2">
                                    <button disabled class="btn btn-success" id="seasonBtn"
                                    class="nextBtns"
                                    >Next</button>
                                </div>
                            </div>
                        </div>
                            
                        <div id="collapseSeason" class="collapse" aria-labelledby="headSeason" 
                        data-parent="#gameAccordion">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <input class="form-control my-2" type="number" id="seasonInp"
                                        maxlength="4" min="1900">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headScore">
                            <div class="row">
                                <div class="col">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" 
                                        data-toggle="collapse" data-target="#collapseScore" 
                                        aria-expanded="true" aria-controls="collapseScore"
                                        style="text-decoration:none"
                                        >Enter Score</button>
                                    </h2>
                                </div>
                                <div class="col-md-2">
                                    <button disabled class="btn btn-success" id="scoreBtn"
                                    class="nextBtns"
                                    >Next</button>
                                </div>
                            </div>
                        </div>
                            
                        <div id="collapseScore" class="collapse" aria-labelledby="headScore" 
                        data-parent="#gameAccordion">
                            <div class="card-body">
                                <div class="row mx-5">
                                    <div class="col">
                                        <h6 style="vertical-align: middle">Home</h6>
                                    </div>
                                    <div class="col-md-2">
                                        <select class="custom-select mr-sm-2" id="homeSelect">
                                            <option value="**"></option>
                                            <option value="true">True</option>
                                            <option value="false">False</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="row text-center">
                                    <div class="col-md-1"></div>
                                    <div class="col">Home Team</div>
                                    <div class="col-md-1 text-center px-3">
                                        <input type="number" value="0" max="20" min="0" class="form-control"
                                        id="scoreValH">
                                    </div>
                                    <div class="col-md-1">v</div>
                                    <div class="col-md-1">
                                        <input type="number" value="0" max="20" min="0" class="form-control"
                                        id="scoreValA">
                                    </div>
                                    <div class="col">Away Team</div>
                                    <div class="col-md-1"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headStart">
                            <div class="row">
                                <div class="col">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" 
                                        data-toggle="collapse" data-target="#collapseStart" 
                                        aria-expanded="true" aria-controls="collapseStart"
                                        style="text-decoration:none"
                                        >Enter Starting 11</button>
                                    </h2>
                                </div>
                                <div class="col-md-2">
                                    <button disabled class="btn btn-success" id="startBtn"
                                    >Next</button>
                                </div>
                            </div>
                        </div>
                            
                        <div id="collapseStart" class="collapse" aria-labelledby="headStart" 
                        data-parent="#gameAccordion">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <input class="form-control my-2" type="text" id="startInp">
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <div class="form-group">
                                            <input type="number" value="0" max="100" min="0" class="form-control"
                                            id="playerNumba">
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-center">
                                        <div class="form-group">
                                            <select class="form-control" id="posSelect"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-2">
                                        <button disabled class="btn btn-success" id="addStartBtn"
                                        >Add</button>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <div class="form-group">
                                            <select multiple class="form-control" id="startSelect"
                                            form="#createGameForm"></select>
                                        </div>    
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <table class="table table-striped">
                                            <thead class="thead-dark text-center">
                                                <tr>
                                                    <th scope="col">Position</th>
                                                    <th scope="col">First Name</th>
                                                    <th scope="col">Last Name</th>
                                                    <th scope="col">Number</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-center" id="tableStarters"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card">
                        <div class="card-header" id="headBench">
                            <div class="row">
                                <div class="col">
                                    <h2 class="mb-0">
                                        <button class="btn btn-link" type="button" 
                                        data-toggle="collapse" data-target="#collapseBench" 
                                        aria-expanded="true" aria-controls="collapseBench"
                                        style="text-decoration:none"
                                        >Enter Bench</button>
                                    </h2>
                                </div>
                                <div class="col-md-2">
                                    <button disabled class="btn btn-success" id="benchBtn"
                                    >Next</button>
                                </div>
                            </div>        
                        </div>
                            
                        <div id="collapseBench" class="collapse" aria-labelledby="headBench" 
                        data-parent="#gameAccordion">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col">
                                        <input class="form-control my-2" type="text" id="benchInp">
                                        <div class="form-group">
                                            <select multiple class="form-control" id="benchSelect"
                                            form="#createGameForm">
                                            </select>
                                        </div>        
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col">
                                        <table class="table table-striped">
                                            <thead class="thead-dark text-center">
                                                <tr>
                                                    <th scope="col">First Name</th>
                                                    <th scope="col">Last Name</th>
                                                    <th scope="col">Number</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-center" id="tableBench"></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row my-4">
                    <div class="col text-center">
                        <button class="btn btn-success btn-lg" id="createBtn"
                        >CREATE</button>
                    </div>
                </div>
            </div>
            <div class="col-md-3"></div>
        </div>
    </main>
    
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
